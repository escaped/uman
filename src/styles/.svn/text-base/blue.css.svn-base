* { font-family: verdana,arial,helvetica,sans-serif; font-size: small}

body { text-align: center }

table.list { 
	margin-left:auto; 
	margin-right:auto; 
	border: 2px solid; 
	border-spacing: 0px; 
	border-collapse:collapse; 
	border-color: #4682B4; 
	line-height: 200%;
}

th { background-color: #4682B4; color: #FFFFFF;}

td { padding-left: 5px; padding-right: 5px; }

.odd { background-color: #F5F5F5 }

.path { padding: 10px; text-align: center }

:link, :visited {
	color: #000;
	display: block;
	text-decoration: none;
}

:link:hover, :visited:hover {
	background-color: #eee;
	color: #4682B4;
}

.rn { 
	text-align: right; 
	background-color: #4682B4; color: #FFFFFF;
	font-weight: bold;
}

table.lyrics {	
	margin-left:auto; 
	margin-right:auto;
	
	text-align:left;
}

table div {
	border-bottom: 1px dotted #bbb;
}
